{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./built",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./node_modules",
  ]
}